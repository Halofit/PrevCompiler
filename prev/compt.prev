(
	b = true,
	for i=0,100 : (
		p.x = i,
		if b then
			pnt(@p, "Hello")
		else
			puts("Error")
		end,
		i
	)
	end
)

where
	var i : int
	var p : point
	var b : bool
	
	fun pnt(p: ptr point, s: str) : ptr point = (
		p^.x = 3,
		p^.y = 2,
		puts(s),
		p
	)
	fun puts(s:str) : void
	
	typ point : rec{x: int, y: int}
	typ int : integer
	typ str : string
	typ bool : boolean
end