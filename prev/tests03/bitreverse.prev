
#function that reverses the bits in an integer (in theory)
#could be useful in a fast fft implementation

bitreverse(100) # 0x0000_0064 -> 0x8600_0000 -> ~something large idk go look it up
where
	fun bitreverse(v:integer) : integer = (
		r = v,
		s = (4*8) - 1, #assuming 32 bit integers

		v = v / 2, #shift right (>>)

		while s != 0 : (
			r = r * 2, #shift left (<<)
			r = r | (v & 1), #this is probably not valid :(, since | and & are probably bool only
			s = s-1,

			v = v / 2 #shift right (>>)
		)end,
		r = r * pow(2,s), # r <<= s
		r
	) where
		var r:integer
		var s:integer
	end
end

